<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<!--
  YAPILAN DEĞİŞİKLİKLER:
  - İkonları sola yaslamak için StackPane'e alignment="TOP_LEFT" eklendi.
-->
<VBox spacing="15.0" styleClass="action-card" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saferoom.controller.cards.ActionCardController">
    <children>
        <!-- DÜZELTME: StackPane'e alignment="TOP_LEFT" eklendi -->
        <StackPane fx:id="iconContainer" styleClass="action-card-icon-container" alignment="TOP_LEFT">
            <children>
                <FontIcon fx:id="icon" styleClass="action-card-icon" />
            </children>
        </StackPane>
        <VBox spacing="5.0">
            <children>
                <Label fx:id="titleLabel" styleClass="action-card-title" text="Title" />
                <Label fx:id="descriptionLabel" styleClass="action-card-description" text="Description" />
            </children>
        </VBox>
    </children>
</VBox>
