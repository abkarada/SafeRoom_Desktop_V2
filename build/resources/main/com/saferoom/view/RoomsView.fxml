<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="20.0" styleClass="page-container" VBox.vgrow="ALWAYS"
      fx:controller="com.saferoom.controller.RoomsController">
    <GridPane styleClass="search-container" hgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="30.0" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints />
        </columnConstraints>
        <TextField fx:id="searchTextField" promptText="Search for a server..." styleClass="input-field" GridPane.columnIndex="0" />
        <Button text="Create New Room" styleClass="action-button" GridPane.columnIndex="2" />
    </GridPane>
    <VBox fx:id="serverListContainer" spacing="15.0" alignment="TOP_LEFT">
        <AnchorPane styleClass="server-item">
            <HBox spacing="10.0" alignment="CENTER_LEFT" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                <Label text="🚀" styleClass="server-icon" />
                <Label text="Project Overlord" styleClass="server-name" />
            </HBox>
            <Label text="118 members" styleClass="server-people" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"/>
        </AnchorPane>
        <AnchorPane styleClass="server-item">
            <HBox spacing="10.0" alignment="CENTER_LEFT" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                <Label text="🛡️" styleClass="server-icon" />
                <Label text="Aegis Defense Network" styleClass="server-name" />
            </HBox>
            <Label text="256 members" styleClass="server-people" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"/>
        </AnchorPane>
        <AnchorPane styleClass="server-item">
            <HBox spacing="10.0" alignment="CENTER_LEFT" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                <Label text="🦅" styleClass="server-icon" />
                <Label text="Griffin Tactical" styleClass="server-name" />
            </HBox>
            <Label text="72 members" styleClass="server-people" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"/>
        </AnchorPane>
        <AnchorPane styleClass="server-item">
            <HBox spacing="10.0" alignment="CENTER_LEFT" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                <Label text="🌐" styleClass="server-icon" />
                <Label text="Vanguard Operations" styleClass="server-name" />
            </HBox>
            <Label text="431 members" styleClass="server-people" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"/>
        </AnchorPane>
        <AnchorPane styleClass="server-item">
            <HBox spacing="10.0" alignment="CENTER_LEFT" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                <Label text="📡" styleClass="server-icon" />
                <Label text="Cyber Sentry Hub" styleClass="server-name" />
            </HBox>
            <Label text="89 members" styleClass="server-people" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"/>
        </AnchorPane>
    </VBox>
</VBox>
